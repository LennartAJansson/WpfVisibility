<UserControl x:Class="WpfApp1.Views.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button Content="Toggle UC1" Command="{Binding ShowUC1Command}" Height="100" Width="100" />
        <Label Content="Window title" Width="120" />
        <TextBox Text="{Binding WindowTitle}" Width="120" />
    </StackPanel>
</UserControl>